<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="weld-spock Test" status="INFO" monitorInterval="5" strict="true">
    <Appenders>
        <Console name="Console Appender">
            <PatternLayout>
                <Pattern><![CDATA[%highlight{%d <%-5p> <%-35.35t> <%x> <%X> <%50.50c> %m}{TRACE = magenta}%n]]></Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console Appender"/>
        </Root>
        <Logger name="org.jboss.weld" level="WARN"/>
    </Loggers>
</Configuration>
